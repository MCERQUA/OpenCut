# Database Configuration (Required)
DATABASE_URL="postgresql://opencut:opencutthegoat@localhost:5432/opencut"

# Authentication (Required)
BETTER_AUTH_SECRET="your-generated-secret-here"
BETTER_AUTH_URL="http://localhost:3000"

# Redis Configuration (Required)
UPSTASH_REDIS_REST_URL="http://localhost:8079"
UPSTASH_REDIS_REST_TOKEN="example_token"

# Freesound API (Required for sound effects)
FREESOUND_CLIENT_ID="your-freesound-client-id"
FREESOUND_API_KEY="your-freesound-api-key"

# Cloudflare R2 Storage (Required for media storage)
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="your-r2-bucket-name"

# Modal Transcription Service (Required for transcription features)
MODAL_TRANSCRIPTION_URL="your-modal-transcription-url"

# Optional Environment Variables
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"